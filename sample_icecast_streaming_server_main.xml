   <paths>
      <basedir>/opt/icecast/2.3.2</basedir>
      <logdir>/var/log/icecast</logdir>
      <webroot>/opt/icecast/2.3.2/share/icecast/web</webroot>
      <adminroot>/opt/icecast/2.3.2/share/icecast/admin</adminroot>
      <alias source="/" dest="/status.xsl"/>
